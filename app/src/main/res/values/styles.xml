<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.LuncNow.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.LuncNow.Button</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="cornerRadius">@dimen/corner_radius_buttons</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.LuncNow.Button.Small" parent="Widget.LuncNow.Button">
        <item name="android:layout_height">@dimen/button_small_height</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.LuncNow.Button</item>
    </style>

    <style name="Widget.LuncNow.Textview" parent="@style/TextAppearance.LuncNow.M">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.LuncNow.TextviewHuge" parent="@style/TextAppearance.LuncNow.XL">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.LuncNow.TextviewMedium" parent="@style/TextAppearance.LuncNow.L">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.LuncNow.TextviewSmall" parent="@style/TextAppearance.LuncNow.S">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.BankingApp.BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/euclid_square_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BankingApp.BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/euclid_square_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>